= form_for @gallery_item do |f|
  - if @gallery_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gallery_item.errors.count, "error")} prohibited this gallery_item from being saved:"
      %ul
        - @gallery_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :disabled
    = f.check_box :disabled
  .actions
    = f.submit 'Save'
