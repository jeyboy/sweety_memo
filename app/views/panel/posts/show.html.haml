.row
  .col-md-12
    %h1
      = @post.name
      = link_to t('panel.views.edit'), [:edit, :panel, @post], class: 'btn btn-primary'
      = link_to t('panel.views.remove'), [:panel, @post], method: :delete, class: 'btn btn-danger', data: {confirm: t('panel.views.confirm')}

  .col-md-12
    = raw @post.content
