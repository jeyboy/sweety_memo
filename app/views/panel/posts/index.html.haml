.clearfix
  %h1.inlined= t('token.posts_list')
  .inlined= link_to t('token.add_post'), new_panel_post_path, class: 'btn btn-success'

- if @posts.present?
  = paginate @posts, theme: 'twitter-bootstrap-3'

  %table.table.table-striped
    = render partial: 'panel/posts/post', collection: @posts

  = paginate @posts, theme: 'twitter-bootstrap-3'
- else
  .text-center
    %h1= t('token.no_posts')
