%tr
  %td
    %strong= link_to gallery_topic.name, [:panel, gallery_topic]
  %td
    = link_to t('token.add_gallery_item_linked'), new_panel_gallery_item_path(gallery_topic_id: gallery_topic.id), class: 'btn btn-success'
  %td= link_to t('panel.views.edit'), [:edit, :panel, gallery_topic], class: 'btn btn-primary'
  %td= link_to t('panel.views.remove'), [:panel, gallery_topic], method: :delete, class: 'btn btn-danger', data: {confirm: t('panel.views.confirm')}
