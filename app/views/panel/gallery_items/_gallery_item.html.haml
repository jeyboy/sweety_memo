%tr
  %td
    - if gallery_item.image
      = image_tag gallery_item.image.file.thumbnail.url, height: 80
  %td
    %strong= link_to gallery_item.name, [:panel, gallery_item]
  %td= link_to t('panel.views.edit'), [:edit, :panel, gallery_item], class: 'btn btn-primary'
  %td= link_to t('panel.views.remove'), [:panel, gallery_item], method: :delete, class: 'btn btn-danger', data: {confirm: t('panel.views.confirm')}