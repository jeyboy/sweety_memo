%h1= t('token.genre_item_list')

- if @gallery_items.present?
  = paginate @gallery_items, theme: 'twitter-bootstrap-3'

  %table.table.table-striped
    = render partial: 'panel/gallery_items/gallery_item', collection: @gallery_items

  = paginate @gallery_items, theme: 'twitter-bootstrap-3'
- else
  .text-center
    %h1= t('token.no_gallery_items')
    = link_to t('token.add_gallery_item'), [:new, :panel, :gallery_item], class: 'btn btn-success'

