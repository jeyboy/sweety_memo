%h1= t('token.videos_list')

- if @posts.present?
  = paginate @posts, theme: 'twitter-bootstrap-3'

  %table.table.table-striped
    = render partial: 'panel/videos/video', collection: @posts

  = paginate @posts, theme: 'twitter-bootstrap-3'
- else
  .text-center
    %h1= t('token.no_videos')
    = link_to t('token.add_video'), new_panel_video_path, class: 'btn btn-success'
