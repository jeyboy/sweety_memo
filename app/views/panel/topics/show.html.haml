.row
  .col-md-12
    %h1
      Topic:
      = @topic.name
      = surround('(', ')') do
        = link_to 'Edit', [:edit, :panel, @topic]

- if @posts.present?
  %h4 Posts in topic:
  %table.table.table-striped
    - @posts.each do |post|
      %tr
        %td= link_to post.name, [:panel, post]
  = paginate @posts, theme: 'twitter-bootstrap-3'
- else
  .text-center
    %h1 No posts yet
    = link_to 'Add post', new_panel_post_path(topic_id: @topic.id), class: 'btn btn-success'
