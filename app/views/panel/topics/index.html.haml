.clearfix
  %h1.inlined= t('token.topics_list')
  .inlined= link_to t('token.add_topic'), [:new, :panel, :topic], class: 'btn btn-success'

- if @topics.present?
  = paginate @topics, theme: 'twitter-bootstrap-3'

  %table.table.table-striped
    = render partial: 'panel/topics/topic', collection: @topics

  = paginate @topics, theme: 'twitter-bootstrap-3'
- else
  .text-center
    %h1= t('token.no_topics')
