.row
  .col-xs-12
    = form_for(@topic, url: [:panel, @topic], multypart: true) do |f|
      = render 'shared/form_errors', object: @topic

      .form-group
        = f.label :category_id
        = surround('(', ')') do
          = link_to 'Create new category', [:new, :panel, :category]
        %fieldset
          = f.collection_select :category_id, Category.all, :id, :name

      .form-group
        = f.label :name
        %fieldset
          = f.text_field :name

      .actions
        = f.submit
