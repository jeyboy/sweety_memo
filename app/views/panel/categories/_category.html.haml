%tr
  %td
    - if category.image
      = image_tag category.image.file.thumbnail.url, height: 80
  %td
    %strong= link_to category.name, [:panel, category]
  %td= link_to t('token.add_topic_linked'), new_panel_topic_path(category_id: category.id), class: 'btn btn-success'
  %td= link_to t('panel.views.edit'), [:edit, :panel, category], class: 'btn btn-primary'
  %td= link_to t('panel.views.remove'), [:panel, category], method: :delete, class: 'btn btn-danger', data: {confirm: t('panel.views.confirm')}